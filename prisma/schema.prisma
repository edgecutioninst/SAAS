generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id             String   @id @default(cuid())
  title          String
  description    String?
  publicId       String
  originalSize   String
  compressedSize String
  userId         String // Stores the Clerk User ID
  bytes          Int
  duration       Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
